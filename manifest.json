{
  "name": "Kiosk Enterprise",
  "description": "Launch any URL as a full-screen kiosk.",
  "manifest_version": 2,
  "version": "6.0.0",
  "version_name": "enterprise-6.0.0",
  "author": {
    "name": "The Cook Company",
    "email": "support@cook.company"
  },
  "kiosk_enabled": true,
  "kiosk": { 
    "required_platform_version": "10718.71.2"
  },
  "offline_enabled": true,
  "icons": {
    "16": "img/icon_16.png",
    "128": "img/icon_128.png"
  },
  "app": {
    "background": {
      "scripts": ["js/async.min.js","js/jquery.min.js","js/lodash.min.js","js/lib/wsc-chrome.js","js/main.min.js"],
      "persistent": false
    }
  },
  "sockets":{
    "tcpServer": {
      "listen": "*"
    }
  },
  "permissions": [
    "<all_urls>",
    "system.display",
    "system.network",
    "power",
    "webview",
    "alwaysOnTopWindows",
    "storage",
    "app.window.fullscreen",
    "app.window.fullscreen.overrideEsc",
    "gcm",
    {"fileSystem": ["write", "directory","retainEntries"]}
  ],
  "optional_permissions": [ "audioCapture", "videoCapture" ],
  "storage": {
    "managed_schema": "schema.json"
  }
}
